<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context="com.example.lgelectronics.dokubai.MainActivity">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edittext_keyword"
            android:layout_width="250dp"
            android:layout_height="wrap_content"

            android:layout_margin="5dp"
            android:hint="@string/input_keyword"
            android:singleLine="true"/>

        <Button
            android:id="@+id/btn_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_alignBaseline="@id/edittext_keyword"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/edittext_keyword"
            android:text="@string/btn_search"
            android:textSize="10dp"
            android:textStyle="bold"
            android:singleLine="true"/>

    </RelativeLayout>

    <GridView
        android:id="@+id/gridview_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:layout_below="@id/rl_top"
        android:numColumns="2"
        android:stretchMode="columnWidth"
        android:horizontalSpacing="10dp"
        android:verticalSpacing="10dp"
        android:gravity="fill_horizontal"
       >

    </GridView>

</RelativeLayout>
